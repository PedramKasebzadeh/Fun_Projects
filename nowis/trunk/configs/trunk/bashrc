#### Color
red='\[\033[0;31m\]'
RED='\[\033[1;31m\]'
green='\[\0330;32m\]'
GREEN='\[\033[1;32m\]\]'
yellow='\[\033[0;33m\]'
YELLOW='\[\033[1;33m\]'
blue='\[\033[0;34m\]'
BLUE='\[\033[1;34m\]'
magenta='\[\033[0;35m\]'
MAGENTA='\[\033[1;35m\]'
cyan='\[\033[0;36m\]'
CYAN='\[\033[1;36m\]'
white='\[\033[0;37m\]'
WHITE='\[\033[1;37m\]'
stopColor='\[\033[0m\]'

#### PROMPT
export SHELL="/bin/bash"
export PS1="$magenta[$red\u$magenta@$red\h$magenta]$white\w $magenta\$ $stopColor"
#export PS1="[\u@\h]\w \$ "

#### LESS with colors (also for man...)
